<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferenceScreen" >

    <PreferenceCategory android:title="@string/pref_category_sync_preferences_settings">
        <!--suppress AndroidElementNotAllowed -->
        <org.jraf.android.backport.switchwidget.SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_pref_enable_service"
            android:key="PREF_SYNC_ENABLED"
            android:title="@string/pref_title_sync_enabled" />
        <ca.rmen.android.networkmonitor.app.prefs.ThemedListPreference
            android:defaultValue="0"
            android:entries="@array/preferences_sync_interval_labels"
            android:entryValues="@array/preferences_sync_interval_values"
            android:icon="@drawable/ic_pref_update_interval"
            android:key="PREF_SYNC_INTERVAL"
            android:summary="%s"
            android:title="@string/pref_title_sync_interval" />
        <!--suppress AndroidElementNotAllowed -->
        <com.afollestad.materialdialogs.prefs.MaterialMultiSelectListPreference
            android:defaultValue="@array/empty_array"
            android:entries="@array/preferences_email_report_formats_labels"
            android:entryValues="@array/preferences_email_report_formats_values"
            android:icon="@drawable/ic_pref_email_report_formats"
            android:key="PREF_SYNC_FORMATS"
            android:summary="@string/pref_summary_sync_formats"
            android:title="@string/pref_title_sync_formats" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_sync_server_settings">
        <ca.rmen.android.networkmonitor.app.prefs.ThemedListPreference
            android:defaultValue="ftp"
            android:entries="@array/preferences_sync_protocol_labels"
            android:entryValues="@array/preferences_sync_protocol_values"
            android:icon="@drawable/ic_pref_update_interval"
            android:key="PREF_SYNC_PROTOCOL"
            android:summary="%s"
            android:title="@string/pref_title_sync_protocol" />
        <!--suppress AndroidElementNotAllowed -->
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:defaultValue=""
            android:icon="@drawable/ic_pref_server"
            android:key="PREF_SYNC_SERVER"
            android:summary="@string/pref_summary_sync_server"
            android:title="@string/pref_title_sync_server" />
        <!--suppress AndroidElementNotAllowed -->
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:defaultValue=""
            android:icon="@drawable/ic_pref_folder"
            android:key="PREF_SYNC_PATH"
            android:summary="@string/pref_summary_sync_path"
            android:title="@string/pref_title_sync_path" />
        <!--suppress AndroidElementNotAllowed -->
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:defaultValue="21"
            android:icon="@drawable/ic_pref_server"
            android:key="PREF_SYNC_PORT"
            android:summary="@string/pref_summary_sync_port"
            android:title="@string/pref_title_sync_port" />
        <!--suppress AndroidElementNotAllowed -->
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:defaultValue=""
            android:icon="@drawable/ic_pref_email_user"
            android:key="PREF_SYNC_USER"
            android:summary="@string/pref_summary_sync_user"
            android:title="@string/pref_title_sync_user" />
        <!--suppress AndroidElementNotAllowed -->
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:defaultValue=""
            android:icon="@drawable/ic_pref_email_password"
            android:inputType="textPassword"
            android:key="PREF_SYNC_PASSWORD"
            android:title="@string/pref_title_sync_password" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_sync_statistics">
        <Preference
            android:defaultValue=""
            android:icon="@drawable/ic_pref_show_log"
            android:key="PREF_LAST_SYNC_DONE"
            android:title="@string/pref_title_last_sync_done" />
    </PreferenceCategory>

</PreferenceScreen>